<h2>Galpões</h2>

<div>
  <%= notice %>
</div>

<div>
  <%= link_to "Cadastrar Galpão", new_warehouse_path %>
</div>


<section id="warehouses">
  <% if @warehouses.empty? %>
    <p>Não existem galpões cadastrados.</p>
  <% end %>

  <div>
    <% @warehouses.each do |w| %>

      <h3><%= link_to "Galpão #{w.name}", warehouse_path(w.id) %></h3>
      <dl>
        <dt>Código:</dt>
        <dd><%= w.code %></dd>

        <dt>Cidade:</dt>
        <dd><%= w.city %></dd>

        <dt>Área:</dt>
        <dd><%= w.area %> m2</dd>
      </dl>
      
    <% end %>
  </div>

  </section>